@model Dictionary<string, IFacts>
@{
    ViewData["Title"] = "Facts";

    var philosophy = Model["Philosophy"];
    var mathematics = Model["Mathematics"];
    var english = Model["English"];
    var physics = Model["Physics"];

}
<h1 class="mt-3 mb-3 text-center mx-auto">Quotes/Facts & Words</h1>
<form method="get">

    <div class="d-flex justify-content-between">

        <div class="justify-content-center rounded jumbotron mx-1 w-45" style="background-color:#cdab89">
            <h2>Philosophy Quotes</h2>
            <div class="container">
                <hr class="bg-dark" />
                <h6>Quote: @philosophy.Content</h6>
                <h6>Author: @philosophy.Author</h6>
            </div>
        </div>

        <div class="justify-content-center rounded jumbotron mx-2 w-45"style="background-color: #FF6663">
            <h2>Physics Quotes</h2>
            <div class="container">
                <hr class="bg-light" />
                <h6>Quote: @physics.Content</h6>
                <h6>Author: @physics.Author</h6>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">

        <div class="justify-content-center rounded jumbotron mx-2 w-45" style="background-color: #080808; color:#FF6663">
            <h2>Mathematics Quotes</h2>
            <div class="container">
                <hr class="bg-light" />
                <h6>Quote: @mathematics.Content</h6>
                <h6>Author: @mathematics.Author</h6>
            </div>
        </div>

        <div class="justify-content-center bg-light jumbotron rounded mx-2 w-45">
            <h2>English Slang</h2>
            <div class="container">
                <hr class="bg-dark" />
                <h6>Word: @english.Content</h6>
                <h6>Meaning: @english.Author</h6>
            </div>
        </div>
    </div>
</form>